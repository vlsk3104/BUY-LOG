<% @item = Item.find(favorite.item_id) %>
<% user = @item.user %>
<li id="favorite-<%= favorite.id %>">
  <div class="row favorite-item">
    <div class="col-md-2">
      <%= link_to((image_tag @item.picture.url), item_path(@item), class: 'item-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @item.name, item_path(@item) %></p>
      <p><%= @item.description %></p>
      <p class="item-user">logged by <%= link_to user.name, user_path(user) %></p>
    </div>
  </div>
</li>