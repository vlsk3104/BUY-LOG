<% user = User.find(notification.from_user_id) %>
<% item = Item.find(notification.item_id) %>
<li id="notification-<%= notification.id %>">
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのアイテムが<%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたのアイテムに<%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag item.picture.url), item_path(item), class: 'item-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to item.name, item_path(item) %></p>
      <p><%= item.description %></p>
    </div>
  </div>
</li>