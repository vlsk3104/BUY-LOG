<% @list = list %>
<% @item = Item.find(list.item_id) %>
<% user = User.find(list.from_user_id) %>
<li id="list-<%= @item.id %>">
  <div class="list-item">
    <p><%= list.created_at.strftime("%Y/%m/%d(%a) %H:%M") %> </p>
    <% if list.user_id == list.from_user_id %>
      <p class="list-message">このアイテムを買う予定リストに追加しました。</p>
    <% else %>
      <p class="list-message"><%= link_to user.name, user_path(user) %>さんがこのアイテムに欲しいリクエストをしました。</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag @item.picture.url), item_path(@item), class: 'item-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @item.name, item_path(@item) %></p>
      <p class="list-item-description"><%= @item.description %></p>
      <%= render "logs/new_form_mini" %>
    </div>
    <div class="col-md-3">
      <%= link_to "リストから削除", "/lists/#{list.id}/destroy",
                             method: :delete,
                             class: "unlist",
                             data: { confirm: "本当にリストから削除しますか？" } %>
    </div>
  </div>
</li>